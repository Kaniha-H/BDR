{% extends 'base.html.twig' %}
{% set title = "Liste des factures" %}

{% block title title %}

{% block body %}
<div class="container">

    <header class="page-header">
        <h2 class="page-title my-5">{{ title }}</h2>
        <div class="page-actions mb-4">
            <a class="btn btn-primary btn-sm" href="{{ path('invoice:create') }}">Créer une facture</a>
        </div>
    </header>

    <div class="row">
        <div class="col-12">

            {% if invoices is empty %}
            <div class="alert secondary">
                Il n'y à aucune facture.
            </div>

            {% else %}
            
            <table class="table table-striped bg-light col-12">
                <thead>
                    <tr>
                        <th>Numéro</th>
                        <th>Date</th>
                        <th>Client</th>
                        <th>Montant</th>
                        <td>Actions</td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                {% for invoice in invoices %}
                    <tr>
                        <td>{{ invoice.number }}</td>
                        <td>{{ invoice.createAt | date("d-m-Y") }}</td>
                        <td>invoice.user.email</td>
                        <!-- <td>invoice.id</td> -->
                        <td>xxxx</td>
                        <td><a href="{{ path('invoice:read', {id: invoice.id}) }}" class="btn btn-success">info</a></td>
                        <td><a href="{{ path('invoice:update', {id: invoice.id}) }}" class="btn btn-warning">éditer</a></td>
                        <td><a href="{{ path('invoice:delete', {id: invoice.id}) }}" class="btn btn-danger">supprimer</a></td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            {% endif %}

        </div>
    </div>
</div>
{% endblock %}