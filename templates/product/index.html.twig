{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="container">
        <header class="page-header">
            <h2 class="page-title mt-5">Mes produits</h2>
        </header>
    </div>

    <main class="container my-5">
        <table class="table">
            <thead class="bg-light">
                <tr>
                    <td>Nom du produit</td>
                    <td>Prix</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }}</td>
                        <td><a href="{{ path('product:read', {id: product.id}) }}" class="btn btn-success">voir</a></td>
                        <td><a href="{{ path('product:update', {id: product.id}) }}"  class="btn btn-warning">editer</a></td>
                        <td><a href="{{ path('product:delete', {id: product.id}) }}" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer ce produit?')"  class="btn btn-danger">supprimer</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </main>

    <div class="actions container">
        <a href="{{ path('product:create') }}" class="btn btn-secondary">Ajouter un produit</a>
    </div>
{% endblock %}
